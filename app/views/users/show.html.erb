<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div>
    
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
          <% if current_user.plan_id == 2 %>
            <div class="well profile-contact-info">
              <h3 class="well-title">Contact Information</h3>
              Phone Number: <%= @user.profile.phone_number %>
              <br />Contact Email: <%= @user.profile.contact_email %><br/><br/>
            </div>
          <% end %>
          <div class="well">
            <h3 class="well-title">About Me</h3>
            <%= @user.profile.description %>
        </div>
    </div>
  </div>
</div>